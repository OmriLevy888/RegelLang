{
  "configurations": {
    "debug": {
      "adapter": "vscode-cpptools",
      "configuration": {
        "request": "launch",
        "program": "${workspaceFolder}/bin/rglc-debug",
        "cwd": "${workspaceFolder}/bin/",
        "args": [
          "../source/sample.json"
        ],
        "externalConsole": true,
        "MIMode": "gdb"
      }
    },
    "debug-tests": {
      "adapter": "vscode-cpptools",
      "configuration": {
        "request": "launch",
        "program": "${workspaceFolder}/bin/rglc-tests",
        "cwd": "${workspaceFolder}/bin/",
        "externalConsole": true,
        "MIMode": "gdb"
      }
    }
  }
}
